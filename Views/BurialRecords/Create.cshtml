                <label asp-for="Photo" class="control-label"></label>
                 <input name="Photo" class="form-control" type="checkbox" onchange="this.value=this.checked">
                @*<select asp-for="Photo">
                    <option value="">Select One</option>
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>*@
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuriedGoods" class="control-label"></label>
                @*<select asp-for="BuriedGoods">
                    <option value="">Select One</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>*@
                <input name="BuriedGoods" class="form-control" type="checkbox" onchange="this.value=this.checked">
@**@             <span asp-validation-for="BuriedGoods" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BurialNumber" class="control-label"></label>
                <input asp-for="BurialNumber" class="form-control" />
                <span asp-validation-for="BurialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="ViewAllData">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
