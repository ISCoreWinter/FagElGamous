@{
    ViewData["Title"] = "Data for Viewing";
}
@model DataListViewModel

<!--displays the data from the database-->

<div class="container"><br /><br /><br /><br /><br /><br /></div>

<h2 style="font-weight: bold;">Please Enjoy Our Current Finds</h2><br />

<!--shows the form for filtering-->
<div class="flex-wrap">
    <div class="col-3 pull-left content">
        <partial name="FilterSummary" model="Model.burialSearchModel"/>
    </div>
</div>

<!--partial view that displays the data in an organized manner-->
<div class="row">

    @foreach (var x in Model.records)
    {
        <partial name="DataSummary" model="x" />
    }
</div>

    <div page-model="@Model.pagingInfo"
         page-action="DataDisplay" page-classes-enabled="true"
         page-class="btn btn-default" page-class-normal="btn-outline-primary"
         page-class-selected="btn-fill btn-default"
         class="btn-group m-1 p-4 pagination">
    </div>
